// Place your settings in this file to overwrite default and user settings.
{
  "editor.formatOnSave": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment.line.keyword.punctuation.yard.ruby",
          "comment.line.parameter.yard.ruby",
          "comment.line.type.yard.ruby",
          "comment.line.string.yard.ruby"
        ],
        "settings": { "foreground": "#608b4e" }
      },
      {
        "scope": "comment.line.keyword.yard.ruby",
        "settings": { "foreground": "#9cdcfe" }
      },
      {
        "scope": "comment.line.type.yard.ruby",
        "settings": { "foreground": "#4ec9b0" }
      },
      {
        "scope": "comment.line.parameter.yard.ruby",
        "settings": { "foreground": "#9cdcfe" }
      },
      {
        "scope": "comment.line.punctuation.yard.ruby",
        "settings": { "foreground": "#505050" }
      }
    ]
  },
  "[ruby]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "ruby.lint": {
    "ruby": true,
    "standard": true
  },
  "ruby.format": false,
  "rubyTestExplorer.rspecCommand": "bundle exec rspec --no-color",
  "prettier.configPath": ".prettierrc.json",
  "prettier.requireConfig": true,
  "npm.packageManager": "yarn"
}
